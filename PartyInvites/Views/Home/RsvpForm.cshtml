@model PartyInvites.Models.GuestResponse
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RsvForm</title>
</head>
<body>
    <form asp-action="RsvpForm"  method="post">
        <div asp-validation-summary="All">

        </div>
        <p>
            <label asp-for="Name" required >Imie i nazwisko </label>
            <input asp-for="Name"/>
        </p>
        <p>
            <label asp-for="Email">Adres e-mail</label>
            <input asp-for="Email"/>
        </p>
        <p>
            <label asp-for="Phone">Numer telefonu</label>
            <input asp-for="Phone"/>
        </p>
        <p>
            <label>Czy przyjdziesz na przyjęcie? </label>
            <select asp-for="WillAttend">
                <option value="">
                    Wybierz opcję
                </option>
                <option value="true">
                    Tak, przyjdę
                </option>
                <option value="false">
                    Nie, nie przyjdę
                </option>
            </select>
        </p>
        <button type="submit">Wyślij RSVP</button>
    </form>
</body>
</html>
