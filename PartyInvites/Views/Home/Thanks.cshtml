@model PartyInvites.Models.GuestResponse
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pl-PL">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dziękujemy</title>
</head>
<body>
    <p>
        <h1>
            Dziękujemy, @Model.Name!
        </h1>
        @if (Model.WillAttend == true)
        {
            @:Cieszymy się,że przyjdziesz do nas. Napoje są już w lodówce!
        }
        else
        {
            @:Przykro nam, że się nie zjawisz, ale dziękujemy za informację.
        }
    </p>
    <p>Kliknij <a asp-action="ListResponses">tutaj</a>, aby wyświetlić listę gości.</p>
</body>
</html>
